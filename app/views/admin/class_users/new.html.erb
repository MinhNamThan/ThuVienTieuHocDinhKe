<div class="admin-page">
  <div> <%= render "admin/static_pages/sidebar" %> </div>
  <div class="form-container">
    <div class="form row">
      <div class="edit-account">
        <p class="form-title">Thêm lớp</p>
        <%= form_for [:admin, @class_user] do |f| %>
          <%= render "admin/shared/error_messages", object: f.object %>
          <%= f.label :name, "Tên" %>
          <%= f.text_field :name, class: "form-control" %>
          <%= f.label :grade, "Khối" %>
          <%= f.select :grade, options_for_select([["6", "6"], ["7", "7"], ["8", "8"], ["9", "9"]]), class: "form-control" %>
          <%= f.submit "Add", class: "submit-btn" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
