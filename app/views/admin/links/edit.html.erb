<div class="admin-page">
  <div> <%= render "admin/static_pages/sidebar" %> </div>
  <div class="form-container">
    <div class="form row">
      <div class="edit-account">
        <p class="form-title">Chỉnh sửa đường dẫn</p>
        <%= form_for [:admin, @link] do |f| %>
          <%= render "admin/shared/error_messages", object: f.object %>
          <%= f.label :describe, "Miêu tả" %>
          <%= f.text_field :describe, class: "form-control" %>
          <%= f.label :link, "Link" %>
          <%= f.text_field :link, class: "form-control" %>
          <%= f.submit "Edit", class: "submit-btn" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
